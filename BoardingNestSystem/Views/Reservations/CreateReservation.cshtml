@model BoardingNestSystem.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<div>
    <h4>BoardingHouse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.Owner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.Owner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.OwnerNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.OwnerNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.HasActiveReservation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.HasActiveReservation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BoardingHouse.Bed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BoardingHouse.Bed.BedID)
        </dd>
    </dl>
</div>
<form asp-action="CreateReservation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ClientsName" class="control-label"></label>
        <input asp-for="ClientsName" class="form-control" />
        <span asp-validation-for="ClientsName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientsNumber" class="control-label"></label>
        <input asp-for="ClientsNumber" class="form-control" />
        <span asp-validation-for="ClientsNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateCheckIn" class="control-label"></label>
        <input asp-for="DateCheckIn" class="form-control" />
        <span asp-validation-for="DateCheckIn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateCheckOut" class="control-label"></label>
        <input asp-for="DateCheckOut" class="form-control" />
        <span asp-validation-for="DateCheckOut" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="BoardingHouseID" />
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>