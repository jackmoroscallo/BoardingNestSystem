@model IEnumerable<BoardingNestSystem.Models.Bed>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="dataTable" class="table table-bordered table-striped " style="width:100%">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BedNum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BedNum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BedID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BedID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BedID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
